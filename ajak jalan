    <script>
        const buttonAvoid = document.getElementById('button-avoid');

        buttonAvoid.onmouseover = function() {
            const x = Math.floor(Math.random() * (window.innerWidth - this.clientWidth));
            const y = Math.floor(Math.random() * (window.innerHeight - this.clientHeight));
            this.style.left = x + 'px';
            this.style.top = y + 'px';
        };
    </script>
